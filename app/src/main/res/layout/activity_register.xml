<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00BCD4"
    tools:context=".activites.RegisterActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/topPage"
                android:layout_width="match_parent"
                android:layout_height="219dp">

                <TextView
                    android:id="@+id/sign_in_title"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="132dp"
                    android:layout_marginEnd="89dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/register"
                    android:textAlignment="center"
                    android:textSize="48sp"
                    app:lineHeight="34sp" />

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="192dp"
                    android:layout_height="105dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="198dp"
                    app:srcCompat="@drawable/foodbook" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fields"
                android:layout_width="wrap_content"
                android:layout_height="325dp"
                android:layout_below="@id/topPage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="233dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="@string/name"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/email_title"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="87dp"
                    android:layout_marginEnd="239dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="@string/email"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/empty_rectangle"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="text"
                    android:paddingStart="20dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="94dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/empty_rectangle"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/password_title"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="146dp"
                    android:layout_marginEnd="222dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="@string/password"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_image_title"
                    android:layout_width="135dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/name_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="236dp"
                    android:layout_marginEnd="221dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="@string/profile_image"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivUploadProfilePhoto"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="162dp"
                    android:layout_marginTop="261dp"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_upload" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="127dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/empty_rectangle"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPassword"
                    android:paddingStart="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_btn"
                android:layout_width="408dp"
                android:layout_height="161dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="25dp">

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="113dp"
                    android:backgroundTint="#3F51B5"
                    android:text="@string/register" />

                <TextView
                    android:id="@+id/already_hav"
                    android:layout_width="215dp"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="66dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/already_have_account"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/signin_btn1"
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="57dp"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sign_in"
                    android:textColor="#3F51B5"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
