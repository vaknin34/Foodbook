<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00BCD4"
    tools:context=".activites.PostDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:layout_marginTop="-30dp"
                    app:srcCompat="@drawable/create_post_header" />


                <TextView
                    android:id="@+id/etDish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="98dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="211dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/dish_name"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    app:lineHeight="34sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="731dp"
                android:layout_below="@id/top"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp">

                <TextView
                    android:id="@+id/writer"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="237dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="Writer"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="236dp"
                    android:layout_marginLeft="236dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="61dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etWriter"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="208dp"
                    android:background="@drawable/empty_rectangle"
                    android:paddingStart="20dp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/etDate"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="234dp"
                    android:layout_marginLeft="234dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="57dp"
                    android:background="@drawable/empty_rectangle"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="221dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="top"
                    android:text="Ingredients"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="114dp"
                    android:layout_below="@+id/etWriter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/empty_rectangle"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/recipe"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ingredients"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="61dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="122dp"
                    android:layout_marginEnd="193dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:text="Recipe"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:layout_below="@+id/etIngredients"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="phone"
                    android:paddingStart="20dp" />

                <ImageView
                    android:id="@+id/ivDishPhoto"
                    android:layout_width="258dp"
                    android:layout_height="247dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="433dp"
                    android:layout_marginEnd="78dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/chefhat" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
