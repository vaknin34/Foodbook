<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostDetailsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="171dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="198dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/foodbook" />


    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="633dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/topPage"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/etDish_name"
                    android:layout_width="306dp"
                    android:layout_height="57dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="51dp"
                    android:fontFamily="@font/abeezee"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    app:lineHeight="34sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/field"
                android:layout_width="match_parent"
                android:layout_height="731dp"
                android:layout_below="@id/topPage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="0dp">

                <ImageView
                    android:id="@+id/ivDishPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="247dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="0dp" />

                <TextView
                    android:id="@+id/writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="288dp"
                    android:layout_marginEnd="257dp"
                    android:fontFamily="@font/abeezee"
                    android:gravity="top"
                    android:text="Writer:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="327dp"
                    android:layout_marginEnd="255dp"
                    android:fontFamily="@font/abeezee"
                    android:gravity="top"
                    android:text="Date:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/etWriter"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="157dp"
                    android:layout_marginLeft="157dp"
                    android:layout_marginTop="-22dp"
                    android:layout_marginEnd="107dp"
                    android:fontFamily="@font/abeezee"
                    android:paddingStart="20dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/etDate"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="155dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="101dp"
                    android:fontFamily="@font/abeezee"
                    android:paddingStart="20dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="226dp"
                    android:fontFamily="@font/abeezee"
                    android:gravity="top"
                    android:text="Ingredients:"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <!-- sample xml -->
                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    expandableTextView:animDuration="200"
                    expandableTextView:maxCollapsedLines="4">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent"
                        android:padding="16dp" />
                </com.ms.square.android.expandabletextview.ExpandableTextView>


                <TextView
                    android:id="@+id/recipe"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/writer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="54dp"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginEnd="221dp"
                    android:fontFamily="@font/abeezee"
                    android:gravity="top"
                    android:text="Recipe:"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/etRecipe"
                    android:layout_width="275dp"
                    android:layout_height="123dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="98dp"
                    android:layout_marginLeft="98dp"
                    android:layout_marginTop="583dp"
                    android:layout_marginEnd="38dp"
                    android:inputType="phone"
                    android:paddingStart="20dp" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>